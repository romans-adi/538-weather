{
  "files": [],
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "types": ["node", "vue", "vite/client", "vue-router"],
    "moduleResolution": "node",
    "target": "es2018",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "lib": ["es2018", "dom"],
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.app.json"
    },
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "shims-vue.d.ts",
    "vite.config.*",
    "src/stores/weatherStore.ts"
  ]
}
